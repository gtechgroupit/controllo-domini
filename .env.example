# Controllo Domini - Environment Configuration
# Copy this file to .env and configure your settings

# Database Configuration
DB_DRIVER=pgsql
DB_HOST=localhost
DB_PORT=5432
DB_NAME=controllo_domini
DB_USER=postgres
DB_PASSWORD=your_secure_password_here

# Database Read Replica (Optional)
DB_READ_HOST=localhost
DB_READ_PORT=5432

# Database SSL Mode
# Options: disable, allow, prefer, require, verify-ca, verify-full
DB_SSL_MODE=prefer

# Redis Configuration (for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Application Settings
APP_ENV=production
APP_DEBUG=false
APP_URL=https://controllodomini.it

# Security
SESSION_LIFETIME=86400
REMEMBER_LIFETIME=2592000
API_RATE_LIMIT_PER_HOUR=100

# Email Configuration (for notifications)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=your_email@example.com
SMTP_PASSWORD=your_email_password
SMTP_FROM_EMAIL=noreply@controllodomini.it
SMTP_FROM_NAME="Controllo Domini"

# OAuth Configuration (Optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=
PLAUSIBLE_DOMAIN=

# Monitoring (Optional)
SENTRY_DSN=
LOG_LEVEL=error

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_2FA=true
ENABLE_OAUTH=true
ENABLE_API=true
ENABLE_MONITORING=true
ENABLE_EXPORTS=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW=3600
RATE_LIMIT_MAX_REQUESTS=100

# Cache Settings
CACHE_ENABLED=true
CACHE_DRIVER=redis
CACHE_DEFAULT_TTL=3600

# Performance
PHP_MEMORY_LIMIT=256M
PHP_MAX_EXECUTION_TIME=60
ENABLE_QUERY_LOGGING=false
ENABLE_SLOW_QUERY_LOG=true
SLOW_QUERY_THRESHOLD=1000

# Maintenance
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="We're currently performing scheduled maintenance. We'll be back soon!"
